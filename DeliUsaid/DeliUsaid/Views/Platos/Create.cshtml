@model DeliUsaid.Models.Platos

@{
    ViewBag.Title = "Create";
}


<form action="@Url.Action("Create","Plato")" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="jumbotron" style="background-color:#F8DDE2; color:#F62104;">
        <center>
            <h3> Agregas Nuevo Platillo</h3>
        </center>
        <hr />

        <div class="form-row">
            <div class="form-group col-sm-4">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.NombrePlato, htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(model => model.NombrePlato, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NombrePlato, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-sm-4">
                @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-sm-4">
                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-sm-4">
                @Html.LabelFor(model => model.Foto1, htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(model => model.Foto1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Foto1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Foto2, htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(model => model.Foto2, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Foto2, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-sm-4">
                @Html.LabelFor(model => model.Foto3, htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(model => model.Foto3, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Foto3, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-sm-4">
                @Html.LabelFor(model => model.IdLocal, "IdLocal", htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.DropDownList("IdLocal", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdLocal, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" style="width: 30%;" />
                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>

     
</form>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
